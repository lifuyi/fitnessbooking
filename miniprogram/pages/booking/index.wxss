/* booking/index.wxss */
.container {
  background-color: #F5F5F5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #E0E0E0;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

/* 标签页 */
.tab-bar {
  display: flex;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #E0E0E0;
}

.tab-item {
  flex: 1;
  padding: 30rpx 0;
  text-align: center;
  font-size: 30rpx;
  color: #666666;
  position: relative;
}

.tab-item.active {
  color: #FF6B35;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #FF6B35;
  border-radius: 2rpx;
}

/* 筛选条件 */
.filter-bar {
  display: flex;
  gap: 30rpx;
  padding: 30rpx;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #E0E0E0;
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #666666;
}

.picker-value {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background-color: #F5F5F5;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #333333;
}

/* 预约列表 */
.booking-list {
  padding: 30rpx;
}

.booking-item {
  margin-bottom: 20rpx;
}

.booking-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.course-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.dance-type {
  align-self: flex-start;
  font-size: 22rpx;
}

.booking-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-warning {
  background-color: rgba(255, 149, 0, 0.1);
  color: #FF9500;
}

.status-success {
  background-color: rgba(52, 199, 89, 0.1);
  color: #34C759;
}

.status-default {
  background-color: rgba(0, 0, 0, 0.05);
  color: #999999;
}

.booking-details {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.detail-icon {
  font-size: 28rpx;
  color: #666666;
}

.detail-text {
  font-size: 28rpx;
  color: #333333;
}

.teacher-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.teacher-avatar {
  width: 40rpx;
  height: 40rpx;
}

.booking-meta,
.cancel-info {
  color: #999999;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.cancel-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.checkin-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.checkin-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  color: #FFFFFF;
  background-color: #FF3B30;
}

.checkin-icon.checked {
  background-color: #34C759;
}

.checkin-text {
  font-size: 26rpx;
  color: #666666;
}

.booking-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  font-size: 28rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkin-btn {
  background-color: #FF6B35;
  color: #FFFFFF;
}

.checkin-btn.disabled {
  background-color: #F5F5F5;
  color: #CCCCCC;
}

.cancel-btn {
  background-color: #F5F5F5;
  color: #666666;
}

.cancel-btn.disabled {
  color: #CCCCCC;
}

.evaluate-btn {
  background-color: #FF6B35;
  color: #FFFFFF;
}

.rebook-btn {
  background-color: #F5F5F5;
  color: #666666;
}

/* 加载状态 */
.loading-container,
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 30rpx;
}

.empty-action-btn {
  padding: 16rpx 40rpx;
  background-color: #FF6B35;
  color: #FFFFFF;
  border-radius: 32rpx;
  font-size: 28rpx;
}

/* 加载更多 */
.load-more {
  padding: 30rpx;
  text-align: center;
}

.load-more-btn {
  display: inline-block;
  padding: 16rpx 40rpx;
  background-color: #F5F5F5;
  color: #666666;
  border-radius: 24rpx;
  font-size: 28rpx;
}

.load-more-btn.loading {
  opacity: 0.6;
}

/* 没有更多 */
.no-more {
  padding: 30rpx;
  text-align: center;
}

.no-more-text {
  font-size: 24rpx;
  color: #CCCCCC;
}