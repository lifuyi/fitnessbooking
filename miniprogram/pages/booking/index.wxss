/* booking/index.wxss */
.container {
  background-color: #FFFFFF;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头部导航栏 */
.header-nav {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #F0F0F0;
}

.nav-left, .nav-center {
  flex: 1;
}

.nav-right {
  flex: 2;
  display: flex;
  justify-content: center;
}

.nav-btn {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666666;
}

.nav-btn .iconfont {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #000000;
}

/* 课程类型筛选 */
.course-type-tabs {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #F0F0F0;
}

.type-tab {
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  font-size: 30rpx;
  color: #666666;
  border-radius: 40rpx;
  background-color: #F5F5F5;
}

.type-tab.active {
  background-color: #E0E0E0;
  color: #333333;
  font-weight: 500;
  border-bottom: 6rpx solid #000000;
  border-radius: 40rpx 40rpx 0 0;
}

.filter-btn {
  margin-left: auto;
  font-size: 28rpx;
  color: #666666;
  padding: 16rpx 24rpx;
}

/* 日期选择 */
.date-selector {
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #F0F0F0;
}

.date-scroll {
  white-space: nowrap;
  padding: 20rpx 30rpx;
}

.date-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.date-item.active {
  border-bottom: 4rpx solid #FF6B35;
}

.date-week {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.date-day {
  font-size: 32rpx;
  color: #000000;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.date-month {
  font-size: 24rpx;
  color: #666666;
}

/* 课程列表 */
.course-list {
  background-color: #FFFFFF;
}

.course-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.course-time {
  width: 120rpx;
  padding-right: 30rpx;
}

.time-range {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.course-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.teacher-info {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.teacher-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 1rpx solid #E0E0E0;
}

.teacher-name {
  font-size: 32rpx;
  color: #000000;
  font-weight: 500;
}

.course-details {
  display: flex;
  flex-direction: column;
}

.course-name {
  font-size: 30rpx;
  color: #000000;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.course-type {
  font-size: 26rpx;
  color: #666666;
}

.booking-info {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.booking-status {
  margin-bottom: 16rpx;
}

.booking-count {
  font-size: 24rpx;
  color: #888888;
}

.booking-action {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.book-btn {
  background-color: #6C6C7A;
  color: #FFFFFF;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  border: none;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.book-btn:active {
  background-color: #5A5A68;
}

.status-badge {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
}

.status-badge.tense {
  background-color: #FFD8D8;
  color: #FF5C5C;
}

.status-badge.full {
  background-color: #FFE0B2;
  color: #FF9800;
}

.badge-icon {
  font-size: 20rpx;
  margin-right: 6rpx;
}

.badge-text {
  font-size: 24rpx;
}

.booking-time {
  font-size: 24rpx;
  color: #888888;
  text-align: right;
  line-height: 1.4;
}

/* 图标字体 */
.iconfont {
  font-family: 'iconfont';
}

.icon-store:before { content: '\e601'; }
.icon-qrcode:before { content: '\e603'; }

/* 活跃标签下划线 */
.type-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #FF6B35;
  border-radius: 2rpx;
}

/* 筛选条件 */
.filter-bar {
  display: flex;
  gap: 30rpx;
  padding: 30rpx;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #E0E0E0;
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #666666;
}

.picker-value {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background-color: #F5F5F5;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #333333;
}

/* 预约列表 */
.booking-list {
  padding: 30rpx;
}

.booking-item {
  margin-bottom: 20rpx;
}

.booking-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.course-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.dance-type {
  align-self: flex-start;
  font-size: 22rpx;
}

.booking-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-warning {
  background-color: rgba(255, 149, 0, 0.1);
  color: #FF9500;
}

.status-success {
  background-color: rgba(52, 199, 89, 0.1);
  color: #34C759;
}

.status-default {
  background-color: rgba(0, 0, 0, 0.05);
  color: #999999;
}

.booking-details {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.detail-icon {
  font-size: 28rpx;
  color: #666666;
}

.detail-text {
  font-size: 28rpx;
  color: #333333;
}

.teacher-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.teacher-avatar {
  width: 40rpx;
  height: 40rpx;
}

.booking-meta,
.cancel-info {
  color: #999999;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.cancel-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.checkin-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.checkin-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  color: #FFFFFF;
  background-color: #FF3B30;
}

.checkin-icon.checked {
  background-color: #34C759;
}

.checkin-text {
  font-size: 26rpx;
  color: #666666;
}

.booking-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  font-size: 28rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkin-btn {
  background-color: #FF6B35;
  color: #FFFFFF;
}

.checkin-btn.disabled {
  background-color: #F5F5F5;
  color: #CCCCCC;
}

.cancel-btn {
  background-color: #F5F5F5;
  color: #666666;
}

.cancel-btn.disabled {
  color: #CCCCCC;
}

.evaluate-btn {
  background-color: #FF6B35;
  color: #FFFFFF;
}

.rebook-btn {
  background-color: #F5F5F5;
  color: #666666;
}

/* 加载状态 */
.loading-container,
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 30rpx;
}

.empty-action-btn {
  padding: 16rpx 40rpx;
  background-color: #FF6B35;
  color: #FFFFFF;
  border-radius: 32rpx;
  font-size: 28rpx;
}

/* 加载更多 */
.load-more {
  padding: 30rpx;
  text-align: center;
}

.load-more-btn {
  display: inline-block;
  padding: 16rpx 40rpx;
  background-color: #F5F5F5;
  color: #666666;
  border-radius: 24rpx;
  font-size: 28rpx;
}

.load-more-btn.loading {
  opacity: 0.6;
}

/* 没有更多 */
.no-more {
  padding: 30rpx;
  text-align: center;
}

.no-more-text {
  font-size: 24rpx;
  color: #CCCCCC;
}