/* course/detail.wxss */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 120rpx;
}

/* 课程封面 */
.course-cover {
  position: relative;
  width: 100%;
  height: 480rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-actions {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 60rpx 30rpx 20rpx;
}

.back-btn,
.share-btn {
  width: 64rpx;
  height: 64rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
}

.back-btn .icon-back,
.share-btn .icon-share {
  font-size: 32rpx;
}

/* 课程信息 */
.course-info {
  margin: -30rpx 30rpx 20rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.course-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.course-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
  flex: 1;
  margin-right: 16rpx;
}

.course-dance-type {
  font-size: 24rpx;
  white-space: nowrap;
}

.course-meta {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666666;
}

.meta-item .icon-time,
.meta-item .icon-location,
.meta-item .icon-users {
  margin-right: 12rpx;
  font-size: 28rpx;
  color: #FF6B35;
}

.teacher-avatar {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

/* 课程介绍 */
.course-intro {
  margin: 20rpx 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 24rpx;
  background-color: #FF6B35;
  border-radius: 3rpx;
}

.intro-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.intro-item:last-child {
  margin-bottom: 0;
}

.intro-label {
  font-size: 28rpx;
  color: #666666;
  width: 80rpx;
  flex-shrink: 0;
}

.intro-content {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  flex: 1;
}

.difficulty-stars {
  display: flex;
  align-items: center;
  flex: 1;
}

.difficulty-stars .icon-star {
  font-size: 28rpx;
  color: #E0E0E0;
  margin-right: 4rpx;
}

.difficulty-stars .icon-star.active {
  color: #FF9500;
}

.difficulty-text {
  font-size: 28rpx;
  color: #666666;
  margin-left: 12rpx;
}

/* 导师信息 */
.teacher-info {
  margin: 20rpx 30rpx;
}

.teacher-card {
  display: flex;
  align-items: center;
}

.teacher-avatar-large {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.teacher-details {
  flex: 1;
}

.teacher-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.teacher-meta {
  color: #666666;
  margin-bottom: 8rpx;
}

.teacher-meta .divider {
  margin: 0 12rpx;
}

.teacher-desc {
  color: #666666;
  line-height: 1.4;
}

.teacher-card .icon-arrow-right {
  font-size: 28rpx;
  color: #CCCCCC;
}

/* 门店信息 */
.store-info {
  margin: 20rpx 30rpx;
}

.store-card {
  padding: 20rpx;
  background-color: #F8F8F8;
  border-radius: 12rpx;
}

.store-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
}

.store-meta {
  display: flex;
  align-items: center;
  color: #666666;
  margin-bottom: 20rpx;
}

.store-meta .icon-time {
  margin-right: 8rpx;
  font-size: 24rpx;
  color: #FF6B35;
}

.store-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 80rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #666666;
}

.action-btn .icon-phone,
.action-btn .icon-navigation {
  font-size: 32rpx;
  margin-bottom: 4rpx;
  color: #FF6B35;
}

/* 预约须知 */
.booking-notice {
  margin: 20rpx 30rpx;
}

.notice-list {
  padding-left: 10rpx;
}

.notice-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

.notice-item:last-child {
  margin-bottom: 0;
}

.notice-bullet {
  color: #FF6B35;
  margin-right: 12rpx;
  flex-shrink: 0;
}

/* 底部占位 */
.bottom-placeholder {
  height: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.consume-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.consume-text {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.remaining-text {
  font-size: 24rpx;
  color: #FF6B35;
  margin-top: 4rpx;
}

.booking-btn {
  width: 240rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.booking-btn.btn-primary {
  background-color: #FF6B35;
}

.booking-btn.btn-primary:active {
  background-color: #E55A2B;
}

.booking-btn.btn-success {
  background-color: #34C759;
}

.booking-btn.btn-disabled {
  background-color: #F0F0F0;
  color: #CCCCCC;
}

.booking-btn[disabled] {
  background-color: #F0F0F0;
  color: #CCCCCC;
}

/* 图标字体 */
.iconfont {
  font-family: 'iconfont';
}

.icon-back:before { content: '\e600'; }
.icon-share:before { content: '\e601'; }
.icon-time:before { content: '\e602'; }
.icon-location:before { content: '\e603'; }
.icon-users:before { content: '\e604'; }
.icon-star:before { content: '\e605'; }
.icon-arrow-right:before { content: '\e606'; }
.icon-phone:before { content: '\e607'; }
.icon-navigation:before { content: '\e608'; }