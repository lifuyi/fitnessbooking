/* admin/settings.wxss */
.container {
  background-color: #F5F5F5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #E0E0E0;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.save-btn {
  padding: 12rpx 24rpx;
  background-color: #FF6B35;
  color: #FFFFFF;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.save-btn.saving {
  background-color: #CCCCCC;
}

.save-btn:active {
  background-color: #E55A2B;
}

/* 管理员信息 */
.admin-info {
  display: flex;
  align-items: center;
  gap: 30rpx;
  margin: 30rpx;
}

.admin-avatar {
  width: 100rpx;
  height: 100rpx;
  background-color: #FF6B35;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.admin-avatar .iconfont {
  font-size: 48rpx;
  color: #FFFFFF;
}

.admin-details {
  flex: 1;
}

.admin-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.admin-role {
  font-size: 24rpx;
  color: #666666;
}

.logout-btn {
  padding: 12rpx 24rpx;
  background-color: #F5F5F5;
  color: #666666;
  border-radius: 24rpx;
  font-size: 24rpx;
}

.logout-btn:active {
  background-color: #E0E0E0;
}

/* 设置内容 */
.settings-content {
  flex: 1;
  height: calc(100vh - 120rpx);
}

.settings-section {
  margin-bottom: 40rpx;
}

.section-header {
  padding: 30rpx 30rpx 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
}

.section-desc {
  font-size: 24rpx;
  color: #999999;
  display: block;
}

.setting-list {
  background-color: #FFFFFF;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-info {
  flex: 1;
  margin-right: 20rpx;
}

.setting-label {
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
}

.setting-desc {
  font-size: 24rpx;
  color: #999999;
  display: block;
}

.setting-input {
  width: 120rpx;
  height: 60rpx;
  padding: 0 16rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
  text-align: center;
}

.setting-switch {
  transform: scale(0.8);
}

.picker-value {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background-color: #F5F5F5;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #333333;
}

.setting-action {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
}

.setting-action .iconfont {
  font-size: 24rpx;
  color: #CCCCCC;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}