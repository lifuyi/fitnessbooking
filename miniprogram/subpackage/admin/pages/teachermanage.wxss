.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 搜索筛选区域 */
.search-filter-section {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.search-bar {
  margin-bottom: 20rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 40rpx;
  padding: 0 30rpx;
  height: 80rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}

.search-icons {
  display: flex;
  align-items: center;
}

.search-clear {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #ccc;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.search-btn {
  color: #007aff;
  font-size: 28rpx;
}

.filter-bar {
  display: flex;
  gap: 20rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #f8f8f8;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.filter-arrow {
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #666;
}

/* 导师列表 */
.teacher-list {
  padding: 0 20rpx;
}

.teacher-item {
  display: flex;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.teacher-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 30rpx;
}

.teacher-avatar image {
  width: 100%;
  height: 100%;
}

.teacher-info {
  flex: 1;
}

.teacher-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.teacher-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.teacher-status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #fff;
}

.status-success {
  background-color: #34c759;
}

.status-warning {
  background-color: #ff9500;
}

.status-default {
  background-color: #8e8e93;
}

.teacher-meta {
  margin-bottom: 16rpx;
}

.meta-item {
  display: inline-block;
  margin-right: 30rpx;
  font-size: 26rpx;
}

.meta-label {
  color: #666;
}

.meta-value {
  color: #333;
}

.teacher-dance-types {
  margin-bottom: 16rpx;
  font-size: 26rpx;
}

.dance-types-label {
  color: #666;
  margin-right: 10rpx;
}

.dance-types {
  color: #333;
}

.teacher-stats {
  font-size: 26rpx;
}

.stat-item {
  color: #666;
}

.teacher-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
}

.edit-btn {
  background-color: #007aff;
}

.status-btn {
  background-color: #ff9500;
}

.delete-btn {
  background-color: #ff3b30;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 50rpx 0;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 悬浮添加按钮 */
.fab {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #007aff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 122, 255, 0.3);
}

.fab-icon {
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
}

/* 筛选器弹窗 */
.filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.filter-panel {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.filter-title {
  font-size: 32rpx;
  font-weight: bold;
}

.filter-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
}

.filter-options {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.filter-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-radius: 16rpx;
  background-color: #f8f8f8;
}

.filter-option.active {
  background-color: #e3f2fd;
  color: #007aff;
}

.option-text {
  font-size: 28rpx;
}

.option-check {
  color: #007aff;
  font-size: 24rpx;
}