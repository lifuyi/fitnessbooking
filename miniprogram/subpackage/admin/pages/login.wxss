/* admin/login.wxss */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  display: flex;
  flex-direction: column;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 60rpx 30rpx 20rpx;
  background-color: #FF6B35;
  color: #FFFFFF;
}

.back-btn,
.placeholder {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn .icon-back {
  font-size: 32rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
}

/* 登录表单 */
.login-form {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 60rpx 30rpx;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  background-color: #FF6B35;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.logo .icon-logo {
  font-size: 60rpx;
  color: #FFFFFF;
}

.app-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.app-desc {
  font-size: 28rpx;
  color: #666666;
}

/* 表单区域 */
.form-section {
  width: 100%;
}

.form-item {
  margin-bottom: 40rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input-wrapper.with-btn {
  padding-right: 0;
}

.input-icon {
  font-size: 32rpx;
  color: #666666;
  margin-right: 16rpx;
}

.form-input {
  flex: 1;
  height: 96rpx;
  font-size: 30rpx;
  color: #333333;
}

.code-btn {
  height: 96rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  color: #FF6B35;
  background-color: transparent;
  border: none;
  white-space: nowrap;
}

.code-btn.disabled {
  color: #CCCCCC;
}

.error-text {
  font-size: 24rpx;
  color: #FF3B30;
  margin-top: 8rpx;
  padding-left: 24rpx;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.login-btn.loading {
  opacity: 0.7;
}

.forget-password {
  text-align: center;
}

.forget-link {
  font-size: 28rpx;
  color: #666666;
}

/* 底部信息 */
.footer-info {
  margin-top: auto;
  padding: 40rpx 30rpx 60rpx;
  text-align: center;
}

.info-text {
  font-size: 24rpx;
  color: #999999;
  display: block;
  margin-bottom: 8rpx;
}

.settings-link {
  font-size: 24rpx;
  color: #FF6B35;
  display: block;
  margin-top: 16rpx;
  text-decoration: underline;
}

/* 图标字体 */
.iconfont {
  font-family: 'iconfont';
}

.icon-back:before { content: '\e600'; }
.icon-phone:before { content: '\e601'; }
.icon-code:before { content: '\e602'; }
.icon-logo:before { content: '\e603'; }