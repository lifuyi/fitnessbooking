/* admin/coursemanage.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F5F5F5;
}

/* 头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #F0F0F0;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.todo-reminder {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx 16rpx;
  background-color: rgba(255, 149, 0, 0.1);
  border-radius: 12rpx;
}

.todo-count {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF9500;
}

.todo-text {
  font-size: 20rpx;
  color: #FF9500;
}

.create-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background-color: #FF6B35;
  color: #FFFFFF;
  border-radius: 24rpx;
  font-size: 26rpx;
}

.create-btn .icon-plus {
  font-size: 24rpx;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background-color: #FFFFFF;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333333;
  padding: 12rpx 0;
  position: relative;
}

.filter-item::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 1rpx;
  height: 24rpx;
  background-color: #F0F0F0;
}

.filter-item:last-child::after {
  display: none;
}

.filter-item .icon-arrow-down,
.filter-item .icon-calendar {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #666666;
}

/* 课程列表 */
.course-list {
  flex: 1;
  padding: 20rpx 30rpx;
}

.course-item {
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.course-info {
  flex: 1;
  padding-right: 20rpx;
}

.course-title-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-right: 16rpx;
  flex: 1;
}

.course-time {
  color: #666666;
  margin-bottom: 8rpx;
}

.course-meta {
  display: flex;
  align-items: center;
  color: #666666;
}

.course-store {
  margin-right: 20rpx;
  padding-right: 20rpx;
  border-right: 1rpx solid #E0E0E0;
}

.course-booking {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: right;
}

.booking-count {
  font-size: 36rpx;
  font-weight: 600;
  color: #FF6B35;
  line-height: 1;
}

.booking-total {
  font-size: 24rpx;
  color: #666666;
}

.booking-label {
  font-size: 20rpx;
  color: #999999;
  margin-top: 4rpx;
}

.course-footer {
  border-top: 1rpx solid #F5F5F5;
  padding-top: 20rpx;
}

.course-actions {
  display: flex;
  justify-content: space-around;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 12rpx 0;
  min-width: 120rpx;
}

.action-btn .icon-users,
.action-btn .icon-edit,
.action-btn .icon-close,
.action-btn .icon-delete {
  font-size: 32rpx;
  color: #666666;
}

.action-btn text:last-child {
  font-size: 24rpx;
  color: #666666;
}

/* 状态标签 */
.status-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  white-space: nowrap;
}

.status-primary {
  background-color: rgba(255, 107, 53, 0.1);
  color: #FF6B35;
}

.status-success {
  background-color: rgba(52, 199, 89, 0.1);
  color: #34C759;
}

.status-warning {
  background-color: rgba(255, 149, 0, 0.1);
  color: #FF9500;
}

.status-default {
  background-color: rgba(0, 0, 0, 0.05);
  color: #666666;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999999;
  font-size: 26rpx;
}

/* 筛选器弹窗 */
.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.filter-panel {
  width: 100%;
  max-height: 60vh;
  background-color: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  font-size: 32rpx;
  font-weight: 500;
}

.panel-header .icon-close {
  font-size: 32rpx;
  color: #666666;
}

.panel-content {
  max-height: 50vh;
  padding: 0 30rpx;
}

.option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #333333;
  border-bottom: 1rpx solid #F5F5F5;
}

.option-item:last-child {
  border-bottom: none;
}

.option-item.active {
  color: #FF6B35;
}

.option-item .icon-check {
  font-size: 32rpx;
  color: #FF6B35;
}

/* 图标字体 */
.iconfont {
  font-family: 'iconfont';
}

.icon-plus:before { content: '\e600'; }
.icon-arrow-down:before { content: '\e601'; }
.icon-calendar:before { content: '\e602'; }
.icon-users:before { content: '\e603'; }
.icon-edit:before { content: '\e604'; }
.icon-close:before { content: '\e605'; }
.icon-delete:before { content: '\e606'; }
.icon-empty:before { content: '\e607'; }